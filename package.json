{
  "name": "apollo-server-trial-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "yarn build && node dist/index.js",
    "watch": "nodemon --watch './**/*.{ts,graphql}' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "dev": "nodemon -L src/index.ts",
    "format": "prettier --write $PWD/'src/**/*.{js,ts}'",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "clean": "rm -rf dist",
    "codegen": "graphql-codegen --config codegen.yml",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy"
  },
  "repository": "https://github.com/Sei-Yukinari/apollo-server-trial-api",
  "author": "Sei-Yukinari <sei.yukinari@nextremer.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-core": "^3.12.0",
    "apollo-server-errors": "^3.3.1",
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.14.0",
    "colors": "^1.4.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "fs": "^0.0.1-security",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-ws": "^5.5.5",
    "jsonwebtoken": "^9.0.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^2.0.0-beta.2",
    "typeorm": "^0.3.16",
    "ws": "^8.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/colors": "^1.2.1",
    "@types/express": "^4.17.17",
    "@types/faker": "^6.6.9",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "@types/validator": "^13.7.1",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.3",
    "faker": "^6.6.6",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.6.4",
    "tsc-watch": "^6.0.4",
    "tsconfig-paths": "^4.2.0",
    "typeorm-seeding": "^1.6.1",
    "typescript": "^5.0.4"
  }
}
